{{#each this}}
  <div class='modal__card' >
    <img src={{image.small}} alt={{name}} class='modal__image' />
    <div class='modal__box'>
      <div class='modal__info'>
        {{#if pleaseNote}}
        <div>
          <h2 class='modal__caption'>INFO</h2>
          <p class='modal__description'>{{pleaseNote}}</p>
        </div>
        {{/if}}
        <div>
          <h2 class='modal__caption'>WHEN</h2>
          <p class='modal__description'>{{date}}
            <br />
             {{time}} ({{timezone}})</p></div>
        <div>
          <h2 class='modal__caption'>WHERE</h2>
          <p class='modal__description'>{{city}}, {{country}}, 
            <br />
            {{place}}</p></div>
        <div> 
          <h2 class='modal__caption'>WHO</h2>
          <p class='modal__description'>{{name}}</p></div>
      </div>
      <ul>
        {{#if prices}}  
        {{#each prices}} 
        <h2 class='modal__caption'>PRICES</h2>
        <li class='modal__item'>
            <svg class="modal__svg" width="24px" height="16px">
                <use href="./images/icons.svg#icon-ticket">
            </svg> 
          <span class='modal__price'>{{type}} {{min}} - {{max}} {{currency}}</span>
           <br />  
          <div class='modal__buyBtn'>
            <a class="modal__link" href={{url}}>BUY TICKETS</a>
          </div>
        </li> 
        {{/each}}
        {{/if}} 
      </ul>  

    </div>
  </div>
  {{/each}}